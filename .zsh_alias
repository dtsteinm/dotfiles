# User-defined aliases
alias apt-install='sudo apt-get install'
alias apt-search='aptitude search'
alias apt-show='aptitude show'
alias apt-remove='sudo apt-get remove'
alias cp='cp -iv'
alias diff='colordiff'
alias echo-path='echo -e ${PATH//:/\\n}'
alias grep='grep --color=auto'
alias info='info --vi-keys'
alias lh='ls -a | egrep "^\."'
alias ll='ls -Ahl'
alias ls='ls --color=auto'
alias matrix='cmatrix -b -u 3 -C cyan'
alias mkderp='mkdir -p' # Herpa
alias mp3gain='mp3gain -s i -p'
alias mv='mv -iv'
alias rename='rename -v'
alias reverse='grep -v'
alias rm='rm -Iv' 
alias rmderp='rmdir -p' # Herpa
alias svim='sudoedit'

# Global aliases
alias -g gp='| grep -i'

# Suffix alias
alias -s py=vim
alias -s txt=vim
alias -s log="less -MN"
alias -s html=chromium
alias -s mkv=mplayer
alias -s avi=mplayer
