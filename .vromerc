" Faster scrolling
map <C-h> h
map <C-j> j
map <C-k> k
map <C-l> l
map h 15h
map j 10j
map k 10k
map l 15l

" Quickly jump between tabs
map J gT
map K gt

" Open Hints in new tabs
map f F
map F f

" Close current tab
map x dc

" Select last active tab
map g; <C-^>

" Use letters in Hint mode
set useletters=1

" Hint keys focused on home row
set hintkeys=asdfgwertzxcv

" Don't load on these sites
set disablesites=mail.google.com

" Additional search engines to use
set searchengines = {"ann":"http://www.animenewsnetwork.com/encyclopedia/search.php?searchbox={{keyword}}"}

" Larger fixed font size for Hint mode
" begin_custom_css
" .__vim_hint_highlight_span {
" font-size: 28px;
" }
" end_custom_css

" add custom quick marks
set qm_e=chrome://extensions
" custom quick marks longer than one key
 set qm_h=http://thefuckingweather.com
