" Faster scrolling
map <C-h> h
map <C-j> j
map <C-k> k
map <C-l> l
map h 15h
map j 10j
map k 10k
map l 15l

" Quickly jump between tabs
map J gT
map K gt

" Open Hints in new tabs
map f F
map F f

" Close current tab
map x dc

" Select last active tab
map g; <C-^>

" Use letters in Hint mode
set useletters=1

" Hint keys focused on home row
set hintkeys=asdfgwertzxcv

" Don't load on these sites
set disablesites=mail.google.com

" Additional search engines to use
set searchengines = {"amz":"https://www.amazon.com/exec/obidos/external-search/?field-keywords={{keyword}}&mode=blended&tag=wwwcanoniccom-20",  "ann":"http://www.animenewsnetwork.com/encyclopedia/search.php?searchbox={{keyword}}", "apt":"http://packages.debian.org/search?keywords={{keyword}}&searchon=names&suite=all&section=all", "cdj":"http://www.cdjapan.co.jp/search3.html?q={{keyword}}&media=&r=any&step=20&order=score", "cr":"http://www.crunchyroll.com/search?q={{keyword}}", "dict":"http://dictionary.reference.com/search?q={{keyword}}", "dvd":"http://www.dvdaf.com/search.html?has={{keyword}}&rgn=us&init_form=str0_0_has_{{keyword}}*rgn_0_us", "fb":"http://www.facebook.com/search/?q={{keyword}}", "fp":"http://www.fandompost.com/?s={{keyword}}&x=0&y=0", "git":"https://github.com/search?q={{keyword}}", "goo":"http://www.google.com/search?q={{keyword}}", "imdb":"http://www.imdb.com/find?s=all&q={{keyword}}", "li":"http://www.linkedin.com/search/fpsearch?type=people&keywords={{keyword}}&search=Search", "so":"http://stackoverflow.com/search?q={{keyword}}", "the":"http://thesaurus.com/browse/{{keyword}}", "trsi":"http://www.rightstuf.com/rssite/search/?SearchTerms={{keyword}}&image=Search", "wiki":"http://en.wikipedia.org/wiki/Special:Search?search={{keyword}}", "yt":"https://www.youtube.com/results?search_query={{keyword}}&search=Search"} 

